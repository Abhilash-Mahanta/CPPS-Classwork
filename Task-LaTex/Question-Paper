\maketitle

\begin{center}
    \textbf{Full Marks: 60 \\ Pass Marks: 27 \\ Time: Three hours}
\end{center}

\section*{\centering Section A}

\begin{enumerate}[label=\textbf{Q\arabic*.}]
    \item \textbf{Discuss the key differences between stack and heap memory allocation in C.} \hfill (5 Marks)
    
    \item \textbf{What are pointers? Explain with examples how pointers can be used to dynamically manage memory in C.} \hfill (5 Marks)
    
    \item \textbf{Explain the advantages of using typedef with structures in C. Provide a code example.} \hfill (5 Marks)
    
    \item \textbf{List and describe any four common preprocessor directives in C, including their use cases.} \hfill (5 Marks)
\end{enumerate}

\section*{\centering Section B}

\begin{enumerate}[label=\textbf{Q\arabic*.}, start=5]
    \item \textbf{Write a C program that uses a recursive function to find the factorial of a given integer.} \hfill (10 Marks)
    
    \item \textbf{Implement a student management system in C using file handling. The program should allow the user to:}
    \begin{itemize}
        \item Add student records (ID, Name, Grade)
        \item Display all records
        \item Update a student's grade by their ID
    \end{itemize}
    \hfill (10 Marks)
    
    \item \textbf{Differentiate between structures and arrays in C. How would you store student data using structures? Provide a code example.} \hfill (10 Marks)
\end{enumerate}

\section*{\centering Section C}

\begin{enumerate}[label=\textbf{Q\arabic*.}, start=8]
    \item \textbf{Analyze the following code and identify any errors. Suggest corrections if necessary.}
    \begin{verbatim}
    #include <stdio.h>

    void modifyArray(int arr[]) {
        for (int i = 0; i < 5; i++) {
            arr[i] *= 2;
        }
    }

    int main() {
        int numbers[5] = {1, 2, 3, 4, 5};
        modifyArray(numbers);
        printf("Modified Array: ");
        for (int i = 0; i < 5; i++) {
            printf("%d ", numbers[i]);
        }
        return 0;
    }
    \end{verbatim}
    \textbf{Explain the output.} \hfill (5 Marks)
    
    \item \textbf{Describe the difference between global and local variables in C, with examples.} \hfill (5 Marks)
\end{enumerate}

